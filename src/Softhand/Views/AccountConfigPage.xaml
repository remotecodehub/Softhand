<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:viewModels="clr-namespace:Softhand.ViewModels"
    x:Class="Softhand.Views.AccountConfigPage"
    Title="Account Config">

    <ContentPage.BindingContext>
        <viewModels:AccountConfigViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout VerticalOptions="Fill">
            <StackLayout VerticalOptions="Fill"
                         Margin="10"
                         x:DataType="viewModels:AccountConfigViewModel">
                <Label Text="Id:"/>
                <Entry HorizontalOptions="Fill" Text="{Binding accCfg.idUri}"/>
                <Label Text="Registrar"/>
                <Entry HorizontalOptions="Fill" Text="{Binding accCfg.registrarUri}"/>
                <Label Text="Proxy"/>
                <Entry HorizontalOptions="Fill" Text="{Binding accCfg.proxy}"/>
                <Label Text="Username"/>
                <Entry HorizontalOptions="Fill" Text="{Binding accCfg.username}"/>
                <Label Text="Password"/>
                <Entry HorizontalOptions="Fill" Text="{Binding accCfg.password}"/>
            </StackLayout>
 
            <Grid VerticalOptions="End"
				    HorizontalOptions="Fill">
           
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="Ok" HorizontalOptions="Fill"  Clicked="Ok_Clicked" />
                <Button Grid.Column="1" Text="Cancel" Clicked="Cancel_Clicked" HorizontalOptions="Fill" />
             </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

