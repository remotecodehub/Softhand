<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Softhand.Application.Views.BuddyConfigPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:Softhand.Application.ViewModels"
    x:DataType="viewModels:BuddyConfigPageViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Fill">
            <Grid HorizontalOptions="Fill" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".15*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height=".3*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Buddy Id"
                    VerticalOptions="Center" />
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalOptions="Fill"
                    Text="{Binding BuddyConfig.uri}"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Subscribe" />
                <Switch
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    IsToggled="{Binding BuddyConfig.subscribe}" />
            </Grid>

            <Grid HorizontalOptions="Fill" VerticalOptions="End">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding OkCommand}"
                    HorizontalOptions="Fill"
                    Text="Ok" />
                <Button
                    Grid.Column="1"
                    Command="{Binding CancelCommand}"
                    HorizontalOptions="Fill"
                    Text="Cancel" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

